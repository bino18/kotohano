<div class="post_wrapper">
  <div class="post_new_inner post_inner">
    <%= form_with model: @post, local: true do |form|%>
      <div class="post_form">
        <%= form.label :title,  "タイトル", class: 'form_label' %>
        <%= form.text_field :title, class: 'post_input_tit' %>
      </div>
      <div class="post_form">
        <%= form.label :body, "文章", class: 'form_label' %>
        <%= form.text_area :body, class: 'post_input_con post_input_body' %>
      </div>
      <div class="post_form">
        <%= form.label :explanation,  "説明", class: 'form_label' %>
        <%= form.text_area :explanation, class: 'post_input_con post_input_exp' %>
      </div>
      <%= form.submit "更新する", class: 'form_btn post_new_btn' %>
    <% end %>
    <p class="edit_destroy"><%= link_to('この投稿を削除する', @post, method: :delete) %></p>
  </div>
</div>
