<div class="user_wrapper cont">
  <div class="post_inner user_inner">
    <% if @user.avatar.attached? %>
      <%= image_tag(@user.avatar) %>
    <% else %>
      <%= image_tag asset_path("/user_images/default_icon.jpg") %>
    <% end %>
    <h2><%= @user.name %></h2>
    <div class="user_bottom">
      <%= link_to('編集', edit_user_path) %>
      <%= link_to('削除', @user, method: :delete) %>
    </div>
  </div>
  <div class="post_inner user_index_inner">
    <ul class="index_ul">
      <% @user.posts.each do |post| %>
        <%= link_to(post_path(post)) do %>
          <li>
            <div class="index_info">
              <div class="user_index_avatar">
              <% if post.user.avatar.attached? %>
                <%= image_tag (post.user.avatar) %>
              <% else %>
                <%= image_tag asset_path ("/user_images/default_icon.jpg") %>
              <% end %>
              </div>
              <p>
              <%= post.user.name %>が
              <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>に投稿
              </p>
            </div>
            <p class="post_index_tit"><%= post.title %></p>
            <p class="post_index_body"><%= post.body[0, 40] %></p>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>