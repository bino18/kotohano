<div class="user_wrapper">
  <div class="user_inner post_inner">
    <div class="user_show_box">
      <div class="user_show_avator">
        <% if @user.avatar.attached? %>
        <%= image_tag(@user.avatar) %>
        <% else %>
        <%= image_tag asset_path("/user_images/default_icon.jpg") %>
        <% end %>
      </div>
      <div class="user_show_info">
        <h2><%= @user.name %></h2>
        <p>投稿した数 <%= @user.posts.length %>件</p>
      </div>
    </div>
    <div class="user_show_bottom">
      <%= link_to(edit_user_path) do %>
        <button type="button" name="button" class="user_show_btn">
              プロフィールを編集する
        </button>
      <% end %>
    </div>
    
  </div>
</div>
  <div class="post_inner user_index_inner">
    <ul class="index_ul">
      <% @user.posts.each do |post| %>
        <%= link_to(post_path(post)) do %>
          <li>
            <div class="index_info">
              <div class="user_index_avatar">
              <% if post.user.avatar.attached? %>
                <%= image_tag (post.user.avatar) %>
              <% else %>
                <%= image_tag asset_path ("/user_images/default_icon.jpg") %>
              <% end %>
              </div>
              <p>
              <%= post.user.name %>が
              <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>に投稿
              </p>
            </div>
            <p class="post_index_tit"><%= post.title %></p>
            <p class="post_index_body"><%= post.body[0, 40] %></p>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
