<div class="login_wrapper">
  <div class="login_inner">
    <div class="login_title">
      <p>kotohanoにログイン</p>
    </div>
    <%= form_with scope: :session, local: true do |form|%>
      <div class="login_form">
        <%= form.label :email,  "メールアドレス", class: 'form_label' %>
        <%= form.text_field :email, class: 'login_input' %>
      </div>
      <div class="login_form">
        <%= form.label :password,  "パスワード", class: 'form_label' %>
        <%= form.password_field :password, class: 'login_input' %>
      </div>
      <%= form.submit "ログインする", class: 'form_btn login_form_btn' %>
    <% end %>
    <%= link_to(new_user_path) do %>
      <button type="button" name="button" class="form_btn  signin_form_btn">
        新しいアカウントを作成する
      </button>
    <% end %>
  </div>
</div>
